<h1>Welcome {{name}}!</h1>

{{#if isLoggedIn}}
  <button type="button" class="btn btn-primary" data-toggle="collapse" data-target="#yourequested">Your trade request<span>( {{{yourTradeReq}}} outstanding)</span></button>
  <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#requestedfromyou">Trade request for you<span>( {{{otherTradeReq}}} unapproved)</span></button>
  <div id="yourequested" class="collapse">
    <ul>
    {{#each request}} 
      <li>{{this.bookName}}</li>
    {{/each}}      
    </ul>
  </div>
  <div id="requestedfromyou" class="collapse">
    <ul>
    {{#each requested}} 
      <li>{{this.bookName}}</li>
    {{/each}}      
    </ul>
  </div>
{{/if}}   
    
    

<div class="grid">
  <div class="grid-sizer"></div>
    {{#each bookList}}
      {{>bookElem}}
    {{/each}}
</div>